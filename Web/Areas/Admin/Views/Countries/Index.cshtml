@model IEnumerable<Domain.Entities.Country>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Alpha2)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Alpha3)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Iso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ordering)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Alpha2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Alpha3)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Iso)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ordering)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
